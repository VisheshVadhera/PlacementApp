<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/text_job_offer_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Name"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/text_recruiter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_job_offer_title"
            android:layout_marginTop="8dp"
            android:text="Company Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_job_offer_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_recruiter_name"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Description"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_process_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_job_offer_description"
            android:layout_marginTop="16dp"
            android:gravity="start"
            android:text="@string/process_date_label"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_pay_package_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_job_offer_description"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:text="@string/pay_package_label"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_process_date_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_process_date_label"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:text="January 5, 2017"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_pay_package_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_below="@id/text_pay_package_label"
            android:layout_marginTop="8dp"
            android:text="Rs 800000"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
